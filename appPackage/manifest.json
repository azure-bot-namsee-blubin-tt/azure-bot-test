        "personal",
        "team",
        "groupChat"
      ],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team",
            "groupChat"
          ],
          "commands": [
            {
              "title": "menu",
              "description": "Show the main menu with all available options"
            },
            {
              "title": "calc",
              "description": "Start calculator mode for math calculations"
            },
            {
              "title": "help",
              "description": "Get help and see available commands"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "bot-api.namsee04.xyz"
