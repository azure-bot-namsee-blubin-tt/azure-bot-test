{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.19/MicrosoftTeams.schema.json",
  "manifestVersion": "1.19",
  "version": "1.0.1",
  "id": "f55d4729-77ce-4e81-a7b0-a584585a1380",
  "developer": {
    "name": "Team Namsee",
    "websiteUrl": "https://www.example.com",
    "privacyUrl": "https://www.example.com/privacy",
    "termsOfUseUrl": "https://www.example.com/terms"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Jira Bot",
    "full": "Teams Bot with Jira & ITSM Integration"
  },
  "description": {
    "short": "Create Jira tickets and ITSM requests from Teams",
    "full": "An interactive bot that allows you to create Jira tickets, ITSM service requests, search issues, and manage your tasks directly from Microsoft Teams."
  },
  "accentColor": "#FFFFFF",
  "bots": [
    {
      "botId": "f55d4729-77ce-4e81-a7b0-a584585a1380",
      "scopes": [
        "personal",
        "team",
        "groupChat"
      ],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team",
            "groupChat"
          ],
          "commands": [
            {
              "title": "itsm create",
              "description": "Create a new ITSM service request"
            },
            {
              "title": "jira create",
              "description": "Create a new Jira ticket"
            },
            {
              "title": "jira my tickets",
              "description": "View your assigned tickets"
            },
            {
              "title": "jira search",
              "description": "Search for Jira tickets"
            },
            {
              "title": "help",
              "description": "Get help and see available commands"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "bot-api.namsee04.xyz"
  ]
}
