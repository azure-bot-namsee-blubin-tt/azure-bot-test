# Azure Bot Service Credentials
# Get these from Azure Portal -> Microsoft Entra ID -> App registrations
MICROSOFT_APP_ID=your-app-id-here
MICROSOFT_APP_PASSWORD=your-app-secret-here

# Bot Endpoint (your public URL via Cloudflare Tunnel)
BOT_ENDPOINT=https://bot-api.namsee04.xyz

# Jira Integration
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-api-token-here
JIRA_PROJECT_KEY=PROJ

# ========================================
# OpenTelemetry Configuration
# ========================================
# Enable/disable OpenTelemetry (default: true)
OTEL_ENABLED=true

# Service identification
OTEL_SERVICE_NAME=azure-bot
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=development

# OTLP Exporter endpoint (default: http://localhost:4318)
# For Jaeger: http://localhost:4318
# For Azure Monitor: use APPLICATIONINSIGHTS_CONNECTION_STRING instead
# For Grafana Cloud/Tempo: https://otlp-gateway-<zone>.grafana.net/otlp
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Metric export interval in milliseconds (default: 60000)
OTEL_METRIC_EXPORT_INTERVAL=60000

# Optional: Headers for authenticated OTLP endpoints
# OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic <base64-encoded-credentials>
